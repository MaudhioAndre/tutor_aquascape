{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "jsx": "react-jsx",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "allowJs": true
    },
    "include": [
      "./src/**/*"
    ]
}

